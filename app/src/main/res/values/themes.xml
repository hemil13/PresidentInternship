<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PresidentInternship" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/bree_serif</item>
    </style>

    <style name="Theme.PresidentInternship" parent="Base.Theme.PresidentInternship" />


    <style name="text_30" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edit_18" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/custom_backgorund</item>
    </style>


    <style name="text_18" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
    </style>

    <style name="button_20" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_marginTop">@dimen/_40sdp</item>
    </style>
</resources>